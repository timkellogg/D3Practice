<h2>SVG link</h2>

<script charset="utf-8">
  var width = 449;
  var height = 249;
  var word = "gongoozler";

  var holder = d3.select("body")
      .append("svg")
      .attr("width", width)
      .attr("height", height);

  // draw a rectangle
  holder.append("rect")
      .attr("x", 100)
      .attr("y", 50)
      .attr("height", 100)
      .attr("width", 200)
      .style("fill", "lightgreen")
      .attr("rx", 10)
      .attr("ry", 10);

  // draw text on the screen
  holder.append("text")
      .attr("x", 200)
      .attr("y", 100)
      .style("fill", "black")
      .style("font-size", "20px")
      .attr("dy", ".35em")
      .attr("text-anchor", "middle")
      .style("pointer-events", "none")
      .text(word);

  // add the link
  holder.append("a")
      .attr("xlink:href", "http://en.wikipedia.org")
      .append("rect")
      .attr("x", 100)
      .attr("y", 50)
      .attr("height", 100)
      .attr("width", 200)
      .style("fill", "lightgreen")
      .attr("rx", 10)
      .attr("ry", 10);

  holder.append("a")
      .attr("xlink:href", "http://en.wikipedia.org/wiki/" + word)
      .append("text")
      .attr("x", 200)
      .attr("y", 100)
      .style("fill", "black")
      .attr("dy", ".35em")
      .attr("text-anchor", "middle")
      .text(word);
</script>
